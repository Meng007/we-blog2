<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="we.blog.web.admin.dao.AdminDao">

    <resultMap id="adminCol" type="Admin">
        <id property="a_id" column="a_id"/>
        <result property="a_username" column="a_username"/>
        <result property="a_password" column="a_password"/>
        <result property="a_pic" column="a_pic"/>
        <result property="a_username" column="a_username"/>
        <result property="a_name" column="a_name"/>
        <result property="is_delete" column="is_delete"/>
        <result property="introduce" column="introduce"/>
        <result property="email" column="email"/>
    </resultMap>

    <select id="getAdmin" parameterType="Admin" resultMap="adminCol">
        select *
        from admin
        <where>
            <if test="a_username !=null and a_username !=''">
             and  a_username=#{a_username}
            </if>
            <if test="a_password !=null and a_password !=''">
                and a_password = #{a_password}
            </if>
            <if test="email !=null and email !=''">
                and email = #{email}
            </if>
        </where>
    </select>

    <update id="update" parameterType="Admin">
        update admin set
                a_username = #{a_username},
                a_password=#{a_password},
                a_pic=#{a_pic},
                a_name=#{a_name},
                email=#{email},
                introduce=#{introduce}
        where a_id = #{a_id}
    </update>
</mapper>